!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Bookku Bookku
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    %link{:href => "//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css", :rel => "stylesheet"}/
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"}
    %script{:src => "//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"}
    %script{:src => "https://www.prepbootstrap.com/Content/shieldui-lite/dist/js/shieldui-lite-all.min.js", :type => "text/javascript"}
    %link{:href => "https://dl.dropboxusercontent.com/u/23551047/css/lightbox.css", :rel => "stylesheet"}/
    %link{:href => "https://cdn.datatables.net/1.10.10/css/jquery.dataTables.min.css", :rel => "stylesheet"}/
    %script{:src => "https://dl.dropboxusercontent.com/u/23551047/js/lightbox-plus-jquery.min.js"}
    %script{:src => "https://cdn.datatables.net/1.10.10/js/jquery.dataTables.min.js"}
    / BRAINTREE
    %script{:src => "//js.braintreegateway.com/v2/braintree.js"}
  %body
    = render 'layouts/header'
    %br/
    %br/
    %br/
    .container
      - if notice.present?
        .alert.alert-success.alert-dismissible
          = notice
          %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
            %span{"aria-hidden" => "true"} ×
      - if alert.present?
        .alert.alert-danger.alert-dismissible
          = alert
          %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
            %span{"aria-hidden" => "true"} ×
    = yield
    = render 'layouts/footer'
