#donateModal.modal.fade{:role => "dialog"}
  .modal-lg.modal-dialog
    / Modal content
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"} Ã—
        %h4.modal-title Donate Your Point
      .modal-body
        = form_for :user, url: user_donate_path(@user), html: {class: "form-horizontal"} do |f|
          .form-group
            = f.label :donate_amount, :class=>"control-label col-md-4 text-left"
            .col-md-8
              = f.text_field :donate_amount, :required => true, :class=>"form-control"
      .modal-footer
        = f.submit("Donate the point", class: "btn btn-success")
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
