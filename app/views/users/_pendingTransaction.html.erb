<div id="editBookDialog<%= book.id %>" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Edit your book</h4>
      </div>
      <div class="modal-body">
        <%= form_for book , url: {action: "update", :controller=>"books"} do |form| %>

          <%= form.hidden_field :id, :value => book.id%>

          <div class="form-group">
            <%=form.label :categories%>
            <br>
            <center><%= form.select :categories, ['Primary School Textbooks', 'Secondary School Textbooks','University Textbooks','Non-Textbooks'],  {}, {required: 'true', autofocus: 'true', class: 'form-control custom'} %></center>
          </div>

          <div class="form-group">
            <%=form.label :condition%>
            <br>
            <center><%= form.select :condition, ['Brand new', 'OK','Looks bad'], {required: 'true', autofocus: 'true', class: 'form-control custom'} %>
          </div>

          <div class="form-group">
            <%=form.label :prefered_location%>
            <br>
            <%= form.text_field :prefered_location , :required => true%>
          </div>
      </div>

      <div class="modal-footer">
        <div class="form-group">
            <%= form.submit("Done",class:"btn btn-default btn-block") %>
        </div>
        <% end%>
      </div>
    </div>

  </div>
</div>
