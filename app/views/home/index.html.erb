    <section id="search-section">
      <div class="container">
        <h1 class="h1-top-margin text-center">Search text-books <small>and get it cheap</small></h1>
        <br><br><center>
          <div id="custom-search-input">
            <%= form_tag books_path, method: :get do %>
              <div class="input-group col-md-8 col-centered">
            <%= text_field_tag :search, params[:search], placeholder: "Type book you've always wanted to have", class: 'search-query form-control search-big' %>
            <span class="input-group-btn col-centered search-big">
                <%= button_tag type: 'submit', class: 'btn btn-info btn-lg' do %>
                <span class="glyphicon glyphicon-search"></span>
              <%end%>
            </span>
              </div>
            <%end%> 
          </div>  
        </center>
        
        <div class="row">
            <div class="col-lg-12 col-centered">
                <h3>...or find it here</h3>
            </div>
        </div>
        <br>

        <div class="container-outer">
          <div class="container-inner">
           <br>
              <div class="books">
                <%if @book_rating[0].present?%>
                <div id="book1" class="book">
                  <a href="/books/<%=@book_rating[0].id%>"><img src="<%=@book_rating[0].big_image%>" id="book_size" class="size-img" /></a>
                </div>
                <%end%>
                <%if @book_rating[1].present?%>
                <div id="book2" class="book">
                  <a href="/books/<%=@book_rating[1].id%>"><img src="<%=@book_rating[1].big_image%>" id="book_size" /></a>
                </div>
                <%end%>
                <%@book_new.each do |book|%>
                <div id="book3" class="book">
                  <a href="/books/<%=book.id%>"><img src="<%=book.big_image%>" id="book_size" /></a>
                </div>
                <%end%>
              </div>
           </div>
        </div>
        <br>
      </div>
    </section>

