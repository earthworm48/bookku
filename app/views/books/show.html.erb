
<div class="container">
	<div class="row">
	<br>
		
		<div class="col-md-3">
		<br>
			<div class="books">
			  <div class="book">
			    <%= image_tag(@book.big_image) %>
			  </div>
			</div>
			<% if current_user%>
				<% unless @book.user.id == current_user.id%>
					<div>
						<%= form_for @book_transaction do |f|%>
							<%= f.hidden_field :book_id, :value => @book.id%>
							<%= f.submit("Buy It",class: "btn btn-default btn-block") %>
						<% end%>
					</div>
				<% else %>
					<div>
						<%= link_to 'Edit Book', edit_book_path %>	
					</div>
					<div>
						<%= link_to "Delete Book", book_path(@book), method: :delete  %>
					</div>
				<% end %>
			<% end %>
		</div> <!-- col 3 -->

		<div class="col-md-6">
				<h2><%= @book.name%><%if @book.subtitle.present?%>,<small> <%= @book.subtitle%><%end%> </small></h2>
				<%if @book.author%><h3><small>by <strong><%=@book.author%></strong></small></h3><%end%>	
				<hr>
				<%if @book.section.present?%>
				<p><strong>Category:</strong> <%=@book.section%></p>
				<%end%>
				<%if @book.published_date.present?%>
				<p><strong>Published by:</strong> <%=@book.publisher%> in <%=@book.published_date%></p>
				<%end%>
				<%if @book.pages.present?%>
				<p><strong>Pages:</strong> <%=@book.pages%></p>
				<%end%>
				<%if @book.language.present?%>
				<p><strong>Language:</strong> <%=@book.language.upcase%></p>
				<%end%>
				<%if @book.rating_count.present?%>
				<p><strong>Rating:</strong> <%="#{@book.rating_average} from #{@book.rating_count}"%></p>
				<%end%>
				<hr>
				<%= link_to "Look inside", @book.preview_link, class: "btn btn-warning" %>
		</div>  <!-- col 7 -->

		<div class="col-md-3 box-book">
			<h3 class="text-center">GET THIS BOOK</h3><br>
			<p>Owner: <strong><%=@book.user.username%></strong> | <em><%= link_to 'Send a message', new_message_path(to: @book.user.id), class: "" %></em></p>
			<p>In location: <%=@book.prefered_location%></p>
			<p>Condition: <%= @book.condition%></p>
			<br>
			<a href="/book_transactions/15"><button class="btn btn-danger center-block" id="addBookDialog">Exchange for <%=@book.price%> points</button><br></a>
			<a href="#"><em>Learn more about points</em></a>
		</div>  <!-- col 4 -->
	</div>


	<div class="row">	
		<div class="col-md-8">
			<br>
			<p><strong>Description:</strong> <%= @book.description %></p>
		</div>
	</div>
</div>


