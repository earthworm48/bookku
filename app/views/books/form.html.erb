
<%= form_for Book.new , html: {multipart: true} do |form| %>
  
  <%= form.hidden_field :isbn, :value => @isbn %>

   <div class="form-group">
    <%=form.label :categories%>
    <%= form.text_field :categories %>
  </div> 

  <div class="form-group">
    <%=form.label :price%>
    <%= form.text_field :price %>
  </div>

  <div class="form-group">
    <%=form.label :condition%>
    <%= form.text_field :condition %>
  </div>

  <div class="form-group">
    <%=form.label :description%>
    <%= form.text_area :description %>
  </div>  

  <div class="form-group">
    <%=form.label :prefered_location%>
    <%= form.text_field :prefered_location %>
  </div>         

  <div class="form-group">
    <%= form.submit("Done",class:"btn btn-default btn-block") %>
  </div>

<% end%>